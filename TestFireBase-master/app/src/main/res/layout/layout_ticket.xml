<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="9dp"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/titreTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Titre"
        android:textColor="#2D3A4B"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/cards"/>

    <TextView
        android:id="@+id/lieuTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        android:text="Lieu"
        android:textColor="#AAB141"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/cards"/>

    <ImageView
        android:id="@+id/imageTicket"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="@+id/cards"/>

    <TextView
        android:id="@+id/dateTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        android:text="Date"
        android:textColor="#AAB141"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/cards"/>

</androidx.constraintlayout.widget.ConstraintLayout>
